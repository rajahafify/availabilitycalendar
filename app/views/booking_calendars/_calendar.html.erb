<%= month_calendar table: {class: "table table-bordered"}, previous_link: previous_link, next_link: next_link, title: title, events: calendar do |date, bookings| %>
  <%= date %>
  <% if bookings.present? %>
    <%= link_to 'Booked', '#', class: 'btn btn-link btn-block', disabled: true %>
  <% elsif date < Date.today %>
    <%= link_to 'Unavailable', '#', class: 'btn btn-link btn-block', disabled: true %>
  <% else %>
    <%= link_to 'Available', "#", class: 'btn btn-primary btn-block btn-form', data: { date:  "#{date}" }  %>
  <% end %>
<% end %>
