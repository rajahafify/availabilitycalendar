<% if @booking.errors.messages.empty? %>
  $('#date-group').removeClass('has-error');
  $('#date-group .help-block').html('');
  $('form')[0].reset();
  $('.calendar').html('<%= escape_javascript(render 'booking_calendars/calendar', calendar: BookingCalendar.all) %>');
  $('.modal').modal('hide');
<% else %>
  $('#date-group').addClass('has-error');
  $('#date-group .help-block').html('<%= escape_javascript(render 'booking_calendars/help_block.html.erb', booking: @booking) %>')
<% end %>
